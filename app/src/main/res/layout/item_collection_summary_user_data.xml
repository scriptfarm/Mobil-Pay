<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_card_view_property"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- NUMBER / TXN-NUMBER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mkrworld.mobilpay.ui.custom.FontTextView
                android:id="@+id/item_summary_user_data_textView_number"
                style="@style/style_text_view_default"
                android:text="@string/app_name" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <com.mkrworld.mobilpay.ui.custom.FontTextView
                android:id="@+id/item_summary_user_data_textView_amount"
                style="@style/style_text_view_default"
                android:text="@string/txns_caps" />
        </LinearLayout>


        <!-- DATE / AMOUNT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mkrworld.mobilpay.ui.custom.FontTextView
                android:id="@+id/item_summary_user_data_textView_date"
                style="@style/style_text_view_default"
                android:text="@string/app_name"
                android:textSize="@dimen/sub_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <com.mkrworld.mobilpay.ui.custom.FontTextView
                android:id="@+id/item_summary_user_data_textView_txn_number"
                style="@style/style_text_view_default"
                android:text="@string/txns_caps"
                android:textSize="@dimen/sub_text_size" />
        </LinearLayout>


        <!-- MODE / STATUS  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mkrworld.mobilpay.ui.custom.FontTextView
                android:id="@+id/item_summary_user_data_textView_mode"
                style="@style/style_text_view_default"
                android:text="@string/app_name"
                android:textSize="@dimen/sub_text_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1" />

            <com.mkrworld.mobilpay.ui.custom.FontTextView
                android:id="@+id/item_summary_user_data_textView_txn_status"
                style="@style/style_text_view_default"
                android:text="@string/txns_caps"
                android:textSize="@dimen/sub_text_size" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>