<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/item_multi_selection_item_with_message_data_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_multi_selection_item_with_message_textView_label"
            style="@style/style_text_view_default"
            android:layout_marginLeft="@dimen/item_multi_selection_content_margin"
            android:gravity="left"
            android:text="@string/txns_caps" />

        <TextView
            android:id="@+id/item_multi_selection_item_with_message_textView_edit"
            style="@style/style_text_view_edit"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/item_multi_selection_content_margin"
            android:text="@string/edit_underline" />
    </LinearLayout>

    <!-- CUSTOMER-ID -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/item_multi_selection_item_with_message_textInputLayout_message"
        style="@style/style_text_input_layout_hint">

        <EditText
            android:id="@+id/item_multi_selection_item_with_message_editText_message"
            style="@style/style_text_input_layout_inputText"
            android:hint="@string/message_optional_caps"
            android:inputType="textNoSuggestions"
            android:maxLength="100" />

    </android.support.design.widget.TextInputLayout>
</LinearLayout>
