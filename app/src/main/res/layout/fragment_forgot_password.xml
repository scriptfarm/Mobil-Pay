<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/fragment_forgot_password_content_margin"
        android:paddingLeft="@dimen/fragment_forgot_password_content_margin"
        android:paddingRight="@dimen/fragment_forgot_password_content_margin">

        <ImageView style="@style/app_header_icon" />

        <com.mkrworld.mobilpay.ui.custom.FontTextView
            style="@style/style_title_text_view_default"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
            android:layout_marginBottom="@dimen/fragment_forgot_password_content_margin"
            android:text="@string/enter_your_login_details" />

        <!-- MOBILE NUMBER-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_forgot_password_textInputLayout_mobile_number"
            style="@style/style_text_input_layout_hint">

            <com.mkrworld.mobilpay.ui.custom.FontEditText
                android:id="@+id/fragment_forgot_password_editText_mobile_number"
                style="@style/style_text_view_single_line"
                android:hint="@string/mobile_number_star"
                android:inputType="number"
                android:maxLength="10" />

        </android.support.design.widget.TextInputLayout>

        <!-- RADIO GROUP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.2" />

            <RadioButton
                android:id="@+id/fragment_forgot_password_radio_merchant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/style_sub_text_view_default"
                android:text="@string/merchant" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.6" />

            <RadioButton
                android:id="@+id/fragment_forgot_password_radio_agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/style_sub_text_view_default"
                android:text="@string/agent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="0.2" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_forgot_password_textView_submit"
            style="@style/style_button_width_full"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
            android:text="@string/submit_caps" />

    </LinearLayout>
</ScrollView>
