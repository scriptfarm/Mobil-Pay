<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back">

    <android.support.v7.widget.CardView
        style="@style/style_card_view_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_forgot_password_content_margin"
                android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
                android:gravity="center"
                android:text="@string/enter_your_login_details"
                android:textColor="@color/fragment_forgot_password_card_title_text"
                android:textSize="@dimen/fragment_forgot_password_title_text_size" />

            <!-- RADIO GROUP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_login_content_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fragment_forgot_password_content_margin"
                android:paddingRight="@dimen/fragment_forgot_password_content_margin">

                <RadioButton
                    android:id="@+id/fragment_forgot_password_radio_merchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/merchant"
                    android:textColor="@color/fragment_login_card_title_text"
                    android:textSize="@dimen/fragment_login_card_title_text_size" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <RadioButton
                    android:id="@+id/fragment_forgot_password_radio_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agent"
                    android:textColor="@color/fragment_login_card_title_text"
                    android:textSize="@dimen/fragment_login_card_title_text_size" />

            </LinearLayout>

            <!-- MOBILE NUMBER-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_forgot_password_textInputLayout_mobile_number"
                style="@style/style_text_input_layout_hint">

                <EditText
                    android:id="@+id/fragment_forgot_password_editText_mobile_number"
                    style="@style/style_text_input_layout_inputText"
                    android:hint="@string/mobile_number_star"
                    android:maxLength="10"
                    android:inputType="textNoSuggestions" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/fragment_forgot_password_textView_submit"
                style="@style/style_button"
                android:layout_marginBottom="@dimen/fragment_forgot_password_content_margin"
                android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
                android:text="@string/submit_caps" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
