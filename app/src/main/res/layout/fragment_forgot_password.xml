<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back">

    <android.support.v7.widget.CardView
        style="@style/style_card_view_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_forgot_password_content_margin"
                android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
                android:gravity="center"
                android:text="@string/enter_your_login_details"
                android:textColor="@color/fragment_forgot_password_card_title_text"
                android:textSize="@dimen/fragment_forgot_password_title_text_size" />

            <!-- FIRST NAME -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_forgot_password_textInputLayout_first_name"
                style="@style/style_text_input_layout_hint">

                <EditText
                    android:id="@+id/fragment_forgot_password_editText_first_name"
                    style="@style/style_text_input_layout_inputText"
                    android:hint="@string/first_name_star"
                    android:inputType="textNoSuggestions" />

            </android.support.design.widget.TextInputLayout>

            <!-- LAST NAME -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_forgot_password_textInputLayout_last_name"
                style="@style/style_text_input_layout_hint">

                <EditText
                    android:id="@+id/fragment_forgot_password_editText_last_name"
                    style="@style/style_text_input_layout_inputText"
                    android:hint="@string/last_name_star"
                    android:inputType="textNoSuggestions" />

            </android.support.design.widget.TextInputLayout>

            <!-- MOBILE NUMBER-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_forgot_password_textInputLayout_mobile_number"
                style="@style/style_text_input_layout_hint">

                <EditText
                    android:id="@+id/fragment_forgot_password_editText_bill_mobile_number"
                    style="@style/style_text_input_layout_inputText"
                    android:hint="@string/mobile_number_star"
                    android:inputType="textNoSuggestions" />

            </android.support.design.widget.TextInputLayout>

            <!-- EMAIL -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fragment_forgot_password_textInputLayout_email"
                style="@style/style_text_input_layout_hint">

                <EditText
                    android:id="@+id/fragment_forgot_password_editText_bill_email"
                    style="@style/style_text_input_layout_inputText"
                    android:hint="@string/email_star"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/fragment_forgot_password_textView_submit"
                style="@style/style_button"
                android:layout_marginBottom="@dimen/fragment_forgot_password_content_margin"
                android:layout_marginTop="@dimen/fragment_forgot_password_content_margin"
                android:text="@string/submit_caps" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
