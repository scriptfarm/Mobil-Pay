<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_merchant_home_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_collection_summary_consolidate_data_textView_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:clickable="false"
        android:gravity="left"
        android:text="@string/mode_caps"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/item_summary_consolidate_data_text_size" />

    <TextView
        android:id="@+id/item_collection_summary_consolidate_data_textView_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:clickable="false"
        android:gravity="right"
        android:text="@string/txns_caps"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/item_summary_consolidate_data_text_size" />

    <TextView
        android:id="@+id/item_collection_summary_consolidate_data_textView_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:clickable="false"
        android:gravity="right"
        android:text="@string/amount_caps"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/item_summary_consolidate_data_text_size" />

</LinearLayout>
