<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/style_card_view_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_change_password_otp_content_margin"
                    android:layout_marginTop="@dimen/fragment_change_password_otp_content_margin"
                    android:gravity="center"
                    android:text="@string/change_your_password"
                    android:textColor="@color/fragment_change_password_otp_card_title_text"
                    android:textSize="@dimen/fragment_change_password_otp_title_text_size" />

                <!-- OLD PASSWORD -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fragment_change_password_otp_textInputLayout_otp"
                    style="@style/style_text_input_layout_hint">

                    <EditText
                        android:id="@+id/fragment_change_password_otp_editText_otp"
                        style="@style/style_text_view_single_line"
                        android:hint="@string/code_received_via_sms"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <!-- NEW PASSWORD -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fragment_change_password_otp_textInputLayout_new_password"
                    style="@style/style_text_input_layout_hint">

                    <EditText
                        android:id="@+id/fragment_change_password_otp_editText_new_password"
                        style="@style/style_text_view_single_line"
                        android:hint="@string/new_password_star"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <!-- CONFIRM PASSWORD -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/fragment_change_password_otp_textInputLayout_confirm_password"
                    style="@style/style_text_input_layout_hint">

                    <EditText
                        android:id="@+id/fragment_change_password_otp_editText_confirm_password"
                        style="@style/style_text_view_single_line"
                        android:hint="@string/confirm_password_star"
                        android:inputType="textPassword" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/fragment_change_password_otp_textView_submit"
                    style="@style/style_button"
                    android:layout_marginBottom="@dimen/fragment_change_password_otp_content_margin"
                    android:layout_marginTop="@dimen/fragment_change_password_otp_content_margin"
                    android:text="@string/submit_caps" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
