<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/toolbar_text_color</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>


    <!-- TEXT VIEW Default Property Start-->
    <style name="style_text_view_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="style_text_view_default_width_weight" parent="style_text_view_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_text_view_default_white" parent="style_text_view_default">
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="style_text_view_default_white_width_weight" parent="style_text_view_default_white">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- TEXT VIEW Default Property End-->

    <!-- TOOLBAR STYLE -->
    <style name="toolbar_dimen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/toolbar_back</item>
    </style>

    <style name="app_header_icon">
        <item name="android:layout_width">@dimen/app_header_icon_width</item>
        <item name="android:layout_height">@dimen/app_header_icon_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/mobil_icon</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/app_header_icon_margin</item>
    </style>

    <!-- CardView Property Start -->
    <style name="style_card_view_property">
        <item name="android:layout_marginBottom">@dimen/card_margin_ver</item>
        <item name="android:layout_marginLeft">@dimen/card_margin_hor</item>
        <item name="android:layout_marginRight">@dimen/card_margin_hor</item>
        <item name="android:layout_marginTop">@dimen/card_margin_ver</item>
        <item name="cardCornerRadius">@dimen/card_corner</item>
        <item name="contentPaddingBottom">@dimen/card_content_padding_ver</item>
        <item name="contentPaddingLeft">@dimen/card_content_padding_hor</item>
        <item name="contentPaddingRight">@dimen/card_content_padding_hor</item>
        <item name="contentPaddingTop">@dimen/card_content_padding_ver</item>
    </style>
    <!-- CardView Property End -->

    <!-- TextInputLayout Property Start -->
    <style name="style_text_input_layout_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/style_text_input_layout_hint_appearince</item>
        <item name="android:layout_marginTop">@dimen/text_input_layout_margin_ver</item>
        <item name="android:layout_marginBottom">@dimen/text_input_layout_margin_ver</item>
    </style>

    <style name="style_text_input_layout_inputText" parent="style_text_view_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="style_text_input_layout_inputText_hint" parent="style_text_view_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="style_text_input_layout_inputText_green" parent="style_text_view_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/text_color_green</item>
    </style>

    <style name="style_text_input_layout_hint_appearince" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_input_layout_hint_text_size</item>
    </style>
    <!-- TextInputLayout Property End -->

    <!-- Button Layout Start -->
    <style name="style_button" parent="style_text_view_default_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Use in case when set in linear layout where orientation is horizontal -->
    <style name="style_button_width_weight" parent="style_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <!-- Button Layout End -->

    <!-- Sliding Drawer Property Start -->
    <style name="style_sliding_drawer_option_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/activity_main_sliding_content_padding</item>
        <item name="android:paddingBottom">@dimen/activity_main_sliding_content_padding</item>
        <item name="android:paddingLeft">@dimen/activity_main_sliding_content_padding</item>
        <item name="android:paddingRight">@dimen/activity_main_sliding_content_padding</item>
    </style>

    <style name="style_sliding_drawer_option_icon">
        <item name="android:layout_width">@dimen/activity_main_sliding_logo_dim</item>
        <item name="android:layout_height">@dimen/activity_main_sliding_logo_dim</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="style_sliding_drawer_option_text" parent="style_text_view_default">
        <item name="android:layout_marginLeft">@dimen/activity_main_sliding_content_padding</item>
        <item name="android:textColor">@color/activity_main_sliding_text_color</item>
    </style>
    <!-- Sliding Drawer Property End -->
</resources>
